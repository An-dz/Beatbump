{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"esModuleInterop": true,
		"baseUrl": "../scripts",
		"resolveJsonModule": true,
		"rootDir": "../scripts",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"moduleResolution": "Node",
		"module": "esnext",
		"lib": ["ES2022", "ESNext"],
		"target": "esnext",
		"types": ["node"]
	},
	"files": ["./build", "./logger"],
	"ts-node": {
		"moduleTypes": { "esm": ["*.ts", "*.mts"] }
	},
	"exclude": ["../node_modules/**"]
}
